<h1>Estadias Ativas</h1>

<% if @my_stays.present? %>
  <% @my_stays.each do |stay| %>
    <div>
      <p>Reserva: <%= stay.confirmation_code %></p>
      <p>Quarto: <%= stay.room.name %></p>
      <p>Número de Hóspedes: <%= stay.number_of_guests %></p>
      <p>Data de Entrada: <%= stay.start_date %></p>
      <p>Data de Saída: <%= stay.end_date %></p>    

      <%= button_to 'Finalizar Estadia', finish_stay_inn_room_reservation_path(stay.inn_id, stay.room_id, stay), method: :post %>

    </div>
  <% end %>
<% else %>
  <p>Não existem reservas ativas.</p>
<% end %>

<%= link_to 'Voltar', root_path %>
